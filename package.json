{
    "name": "secure-csrf",
    "version": "1.0.2",
    "description": "CSRF protection for NodeJS apps",
    "main": "commonjs/index.js",
    "module": "esm/index.js",
    "types": "esm/index.d.ts",
    "files": [
        "CHANGELOG.md",
        "README.md",
        "LICENCE"
    ],
    "scripts": {
        "test": "jest",
        "test:ci": "jest --coverage",
        "build": "./scripts/build.sh",
        "dev": "nodemon --watch *.ts --exec ts-node ./src/index.ts",
        "start": "node dist/src/index.js",
        "prettier:check": "prettier --check \"**/*.ts*\"",
        "prettier:fix": "prettier --write \"**/*.ts*\"",
        "lint:tsc": "tsc --noemit",
        "lint": "npm run prettier:check && eslint **/*.ts --ext .ts --no-ignore && npm run lint:tsc",
        "add-package-json-files": "ts-node ./scripts/addPackageJsonFiles.ts",
        "publish": "(cd dist && npm publish --access public)"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:Romkin7/secure-csrf.git"
    },
    "keywords": [
        "CSRF",
        "CSURF",
        "Express",
        "NodeJS",
        "Cookie",
        "tokens",
        "Secure"
    ],
    "author": "Roman Tuomisto",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Romkin7/express-scrf/issues"
    },
    "homepage": "https://github.com/Romkin7/express-scrf#readme",
    "dependencies": {
        "uid": "^2.0.2"
    },
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/rndm": "^1.2.2",
        "@types/tsscmp": "^1.0.2",
        "@typescript-eslint/eslint-plugin": "^7.13.0",
        "eslint": "^8.56.0",
        "eslint-plugin-prettier": "^5.1.3",
        "jest": "^29.7.0",
        "nodemon": "^3.1.3",
        "prettier": "^3.3.2",
        "ts-jest": "^29.1.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.5"
    }
}